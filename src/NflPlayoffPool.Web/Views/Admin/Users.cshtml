@using NflPlayoffPool.Web.ViewModels
@model ManageUsersViewModel
@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<p>Here you can manage users for your application.</p>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in this.Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>
                    <a href="#">Edit</a> |
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
