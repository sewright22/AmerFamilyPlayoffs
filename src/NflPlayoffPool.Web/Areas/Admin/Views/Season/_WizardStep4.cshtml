@using NflPlayoffPool.Data.Models
@model SeasonWizardViewModel

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="alert alert-success">
            <h5 class="alert-heading">
                <i class="fas fa-check-circle me-2"></i>Ready to Create Season
            </h5>
            <p class="mb-0">
                Please review your settings below. Once created, you can still modify most of these settings 
                from the season management page.
            </p>
        </div>

        <!-- Basic Information Review -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Basic Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>Season Year:</strong><br>
                        <span class="text-primary fs-5">@Model.Year</span>
                    </div>
                    <div class="col-md-4">
                        <strong>Submission Deadline:</strong><br>
                        <span>@Model.CutoffDateTime.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                    </div>
                    <div class="col-md-4">
                        <strong>Description:</strong><br>
                        <span>@(string.IsNullOrEmpty(Model.Description) ? "None" : Model.Description)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scoring Rules Review -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-trophy me-2"></i>Scoring Rules
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-play text-primary fa-2x mb-2"></i>
                            <h6>Wildcard</h6>
                            <div class="fs-4 fw-bold text-primary">@Model.WildcardPoints</div>
                            <small class="text-muted">points each</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-forward text-success fa-2x mb-2"></i>
                            <h6>Divisional</h6>
                            <div class="fs-4 fw-bold text-success">@Model.DivisionalPoints</div>
                            <small class="text-muted">points each</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-fast-forward text-warning fa-2x mb-2"></i>
                            <h6>Conference</h6>
                            <div class="fs-4 fw-bold text-warning">@Model.ConferencePoints</div>
                            <small class="text-muted">points each</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-crown text-danger fa-2x mb-2"></i>
                            <h6>Super Bowl</h6>
                            <div class="fs-4 fw-bold text-danger">@Model.SuperBowlPoints</div>
                            <small class="text-muted">points</small>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <strong>Maximum Possible Score: 
                        <span class="fs-5 text-primary">
                            @(6 * Model.WildcardPoints + 4 * Model.DivisionalPoints + 2 * Model.ConferencePoints + Model.SuperBowlPoints) points
                        </span>
                    </strong>
                </div>
            </div>
        </div>

        <!-- Teams Setup Review -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-users me-2"></i>Teams Setup
                </h6>
            </div>
            <div class="card-body">
                @if (Model.TeamSetupMethod == TeamSetupMethod.UseTemplate)
                {
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-list-ul me-2"></i>
                        <strong>NFL Template Selected</strong><br>
                        All 32 NFL teams will be added automatically with placeholder seedings. 
                        You can update playoff seedings later from the season management page.
                    </div>
                }
                else if (Model.TeamSetupMethod == TeamSetupMethod.ImportFile)
                {
                    <div class="alert alert-success mb-0">
                        <i class="fas fa-file-upload me-2"></i>
                        <strong>File Import Selected</strong><br>
                        Teams will be imported from your uploaded file after season creation.
                    </div>
                }
                else if (Model.TeamSetupMethod == TeamSetupMethod.ManualEntry)
                {
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-keyboard me-2"></i>
                        <strong>Manual Entry Selected</strong><br>
                        @Model.Teams.Count teams have been added manually.
                        @if (Model.Teams.Count < 32)
                        {
                            <span class="text-warning">Note: You have fewer than 32 teams. You can add more later.</span>
                        }
                    </div>

                    @if (Model.Teams.Any())
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary">AFC Teams (@Model.Teams.Count(t => t.Conference == Conference.AFC))</h6>
                                @foreach (var team in Model.Teams.Where(t => t.Conference == Conference.AFC).OrderBy(t => t.Seed))
                                {
                                    <div class="d-flex justify-content-between">
                                        <span>@team.Name (@team.Abbreviation)</span>
                                        <span class="badge bg-primary">Seed @team.Seed</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-success">NFC Teams (@Model.Teams.Count(t => t.Conference == Conference.NFC))</h6>
                                @foreach (var team in Model.Teams.Where(t => t.Conference == Conference.NFC).OrderBy(t => t.Seed))
                                {
                                    <div class="d-flex justify-content-between">
                                        <span>@team.Name (@team.Abbreviation)</span>
                                        <span class="badge bg-success">Seed @team.Seed</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Next Steps -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-tasks me-2"></i>What Happens Next?
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-success">After Creation:</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success me-2"></i>Season will be created with your settings</li>
                            <li><i class="fas fa-check text-success me-2"></i>Teams will be added (if using template)</li>
                            <li><i class="fas fa-check text-success me-2"></i>You'll be redirected to the season details page</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-primary">Recommended Next Steps:</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-arrow-right text-primary me-2"></i>Update playoff seedings based on actual results</li>
                            <li><i class="fas fa-arrow-right text-primary me-2"></i>Set this as the current active season</li>
                            <li><i class="fas fa-arrow-right text-primary me-2"></i>Configure the master bracket for scoring</li>
                            <li><i class="fas fa-arrow-right text-primary me-2"></i>Invite players to submit their brackets</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>