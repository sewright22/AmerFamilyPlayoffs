@model SeasonsModel

<h2>Seasons</h2>

<div class="mb-3">
    <a asp-action="Wizard" class="btn btn-primary me-2">
        <i class="fas fa-magic me-1"></i> Create Season (Wizard)
    </a>
    <button type="button" class="btn btn-outline-secondary modal-button" data-url="/Admin/Season/Create">
        <i class="fas fa-plus me-1"></i> Quick Create
    </button>
</div>

<row>
    @for (int i = 0; i < this.Model.Seasons.Count(); i++)
    {
        <partial name="ViewSummary" model="@this.Model.Seasons[i]" />
    }
</row>