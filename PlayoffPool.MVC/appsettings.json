{
    "ConnectionStrings": {
        "PlayoffPoolContext": "server=localhost;port=3306;",
        "DatabaseContext": "server=localhost;port=3306;"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "async": true,
            "logfile": {
                "type": "File",
                "fileName": "./logs/nlog-${shortdate}.log"
            },
            "errorLog": {
                "type": "File",
                "fileName": "./logs/nlog-error-${shortdate}.log"
            },
            "logconsole": {
                "type": "Console"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "logconsole"
            },
            {
                "logger": "errorLog",
                "minLevel": "Error",
                "writeTo": "logconsole"
            },
            {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "logfile"
            }
        ]
    },
    "AllowedHosts": "*"
}
