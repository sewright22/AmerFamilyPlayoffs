# NFL Playoff Pool - Production Environment
# Copy this content to .env on your server

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
WEBAPP_PORT=80

# MongoDB Configuration
MONGODB_PORT=27017
MONGODB_DATABASE=playoff_pool
# SECURITY: Replace with a secure password
MONGODB_ROOT_PASSWORD=YourSecureMongoPassword123!@#
MONGODB_DATA_PATH=/opt/nflplayoffpool/data/mongodb

# Admin Account Configuration
# SECURITY: Replace with your secure admin credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=YourSecureAdminPassword123!@#
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User